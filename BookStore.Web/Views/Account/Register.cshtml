@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row loginForm">
    <div class="col-md-5">
        <h2>Register now at Book Store</h2>
        <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
            <h4>Create a new account</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label asp-for="Email" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Password" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
            </div>

            <div class="form-group formPullRightButton">
                <div class="col-md-offset-8">
                    <input type="submit" class="btn btn-success" value="Register" />
                </div>
            </div>
        </form>
    </div>
</div>



